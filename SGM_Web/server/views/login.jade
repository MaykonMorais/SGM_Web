extends layout

block content
  body.bg-gradient-primary
    .container
      // Outer Row
      .row.justify-content-center
        .col-xl-10.col-lg-12.col-md-9
          .card.o-hidden.border-0.shadow-lg.my-5
            .card-body.p-0
              // Nested Row within Card Body
              .row
                .col-lg-6.d-none.d-lg-block.bg-login-image
                |               
                .col-lg-6
                  .p-5
                    .text-center
                      h1.h4.text-gray-900.mb-4 Bem-Vindo(a)

                    if message && message.length
                      strong #{message}              
                    form.user(action='/login', method='POST')
                      .form-group
                        label(for="matricula")
                        input#matricula.form-control.form-control-user(name="matricula",type='text', aria-describedby='matricula', placeholder='Matricula/CPF/CNPJ')
                      |                     
                      .form-group
                        label(for="password")
                        input#password.form-control.form-control-user(type='password', name='password', placeholder='Senha')
                      // Ajustar aos niveis corretos de acordo com o excel                     
                      button.btn.btn-primary.btn-user.btn-block(type='submit')
                        | Login
                    |                   
                    hr
                    |                   
                    .text-center
                      a.small(href='forgot-password.html') Esquesceu a senha?
                    |                   
                    .text-center
                      a.small(href='/register') Criar uma conta!
    // Bootstrap core JavaScript
    script(src='vendor/jquery/jquery.min.js')
    |   
    script(src='vendor/bootstrap/js/bootstrap.bundle.min.js')
    // Core plugin JavaScript
    script(src='vendor/jquery-easing/jquery.easing.min.js')
    // Custom scripts for all pages
    script(src='js/sb-admin-2.min.js')
